#!/bin/bash
base=`dirname $0`
base=`realpath $base`
source "$base/common.sh"
cmd=""

if [[ $1 == 'cdf' ]]; then
  cmd="$base/mp-cdf"
elif [[ ! -z $1 ]]; then
  echo "Unsupported display command given"
  exit 2
else
  echo "Usage: $0 CMND [AP...]"
  exit 0
fi

cmdb="$(basename "$cmd")"
shift

updown="$1"
shift

if [[ $# -eq 0 ]]; then
  args="$(cat ./*/iwconfig.log 2>&1 | grep "ESSID:\"" | grep -- "-wifi\"" | sed 's/^.*ESSID:"\([^"]*\)-wifi".*/\1/' | sort | uniq)"
  args=($args)
else
  args=("$@")
fi

for ap in "${args[@]}"; do
  suffix="$(suffix "." "$updown" "$ap")"
  if [[ -z "$suffix" ]]; then
    continue
  fi

  drs=()
  for dir in *[-@]$suffix-$updown; do
    drs+=("$dir")
    drs+=("$ap")
  done

  echo
  echo "$cmdb" "$run"
  "$cmdb" "${drs[@]}"
done

# vim:textwidth=0:
